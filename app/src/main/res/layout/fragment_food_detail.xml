<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cadcdb"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:id="@+id/img_food_detail"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/txt_food_detail_libelle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Libelle"
        android:textSize="28dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"/>


    <TextView
        android:id="@+id/txt_food_detail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Description"
        android:textSize="18dp"
        android:textColor="#544847"
        android:textStyle="bold"
        android:gravity="center"/>


    <TextView
        android:id="@+id/txt_food_detail_prix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:text="Prix"
        android:textSize="18dp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:gravity="center"/>
    <TextView
        android:id="@+id/txt_food_detail_prix_remise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Remise"
        android:textSize="18dp"
        android:layout_margin="5dp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:gravity="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="QuantitÃ©"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_quantite_moins"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:alpha="0.7"
            android:background="#ffffff"
            android:text="-"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/txt_quantite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="1"
            android:textStyle="bold"

            android:textColor="#000000"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_quantite_plus"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:alpha="0.7"
            android:background="#ffffff"
            android:text="+"
            android:textColor="#000000"
            android:textStyle="bold"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_ajouter_panier"
        android:layout_marginTop="20dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:alpha="0.7"
        android:background="#ffffff"
        android:text="Ajouter au panier" />

</LinearLayout>