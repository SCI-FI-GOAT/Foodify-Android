<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cadcdb">

    <LinearLayout
        android:layout_width="700dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Ajouter une nouvelle varietée"
            android:textColor="#028678"
            android:textSize="26dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_categirifood_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="50dp">
        </Spinner>

        <EditText
            android:id="@+id/edt_ajout_menu_libelle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Libellé"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"/>

        <EditText
            android:id="@+id/edt_ajout_menu_description"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"/>

        <EditText
            android:id="@+id/edt_edt_ajout_menu_prix"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Prix"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"/>

        <Button
            android:id="@+id/btn_ajouter_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#b459ff00"
            android:text="Ajouter"
            android:textColor="#ffffff"
            android:gravity="center"
            android:alpha="07"
            android:layout_gravity="center"
            android:layout_marginTop="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#cadcdb"
            android:layout_weight="2"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/img_ajout_food"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="#cadcdb">

            <Button
                android:id="@+id/btn_upload_image_food"
                android:textColor="@color/colorPrimaryDark"
                android:text="Upload Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>