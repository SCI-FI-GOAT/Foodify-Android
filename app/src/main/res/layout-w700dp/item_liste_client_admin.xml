<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="horizontal"
       android:padding="10dp">

       <ImageView
           android:id="@+id/item_client_img"
           android:layout_width="200dp"
           android:layout_height="150dp"
           android:background="#a6d6d5"
           android:src="@drawable/avatar"
           android:scaleType="centerCrop"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="150dp"
           android:orientation="vertical"
           android:layout_marginLeft="20dp"
           android:weightSum="3">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="10"
               android:padding="2dp"
               android:layout_weight="1">
               <TextView
                   android:id="@+id/item_client_nom"
                   android:text="nom"
                   android:textSize="18dp"
                   android:textColor="#023a58"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="5"
                   android:layout_marginLeft="5dp"/>
               <TextView
                   android:id="@+id/item_client_prenom"
                   android:text="prenom"
                   android:textSize="18dp"
                   android:textColor="#023a58"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="5"
                   android:layout_marginLeft="5dp"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:padding="2dp"
               android:layout_weight="1">
               <TextView
                   android:id="@+id/item_client_email"
                   android:text="email"
                   android:textSize="18dp"
                   android:textColor="#023a58"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="10"
               android:padding="2dp"
               android:layout_weight="1">
               <TextView
                   android:id="@+id/item_client_username"
                   android:text="username"
                   android:textSize="18dp"
                   android:textColor="#023a58"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="5"
                   android:layout_marginLeft="5dp"/>
               <TextView
                   android:id="@+id/item_client_tel"
                   android:text="tel"
                   android:textSize="18dp"
                   android:textColor="#023a58"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="5"
                   android:layout_marginLeft="5dp"/>

           </LinearLayout>
       </LinearLayout>
   </LinearLayout>
</LinearLayout>