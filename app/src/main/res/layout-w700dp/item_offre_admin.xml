<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/item_offre_id"
        android:text="ID Offre"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#233460"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/item_offre_image"
            android:layout_width="200dp"
            android:layout_height="150dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="5"
            android:padding="10dp"
            android:weightSum="2"
            android:gravity="center">

            <TextView
                android:id="@+id/item_offre_libelle"
                android:text="libelle"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#6d5755"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/item_offre_description"
                android:text="description"
                android:textSize="18dp"
                android:textColor="#212121"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_weight="5"
            android:weightSum="2"
            android:gravity="center">
            <TextView
                android:id="@+id/item_offre_date"
                android:text="date"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#233460"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/item_offre_taux"
                android:text="taux"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>